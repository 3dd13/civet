    <![endif]-->
  </head>
  <body>
    <div id="wrap">
      <%= render 'layouts/header' %>

      <!-- Begin page content -->
      <div class="container">
        <%= yield %>
      </div>
    </div>

    <div id="footer">
      <div class="container">
        <p class="text-muted credit">&copy; 2013 by Civet.</p>
      </div>
    </div>
  </body>
</html>
